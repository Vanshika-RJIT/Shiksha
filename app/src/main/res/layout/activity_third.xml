<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#3949AB"
    tools:context=".ThirdActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="361dp"
        android:layout_height="147dp"
        android:layout_marginTop="23dp"
        app:srcCompat="@drawable/shiksha" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg1"
        android:paddingLeft="7dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/bg1"
        android:layout_marginTop="10dp"
        android:paddingLeft="7dp"
        android:drawablePadding="10dp"
        android:textSize="23sp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:inputType="textEmailAddress"
        android:hint="Email Address"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editTextNumberSigned"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg1"
        android:paddingLeft="7dp"
        android:textSize="23sp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
        android:inputType="numberSigned"
        android:hint="Mobile Number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/bg1"
        android:paddingLeft="7dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"
        android:textSize="23sp"
        android:hint="Enter Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextTextPassword4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="23sp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/bg1"
        android:paddingLeft="7dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#42E3F6"
        android:text="By registering, you are agreeing to our"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textSize="17sp"
       android:textColor="#ffffff"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button4"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="23dp"
        android:background="@drawable/bg2"
        android:layout_width="190dp"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:onClick="register1"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:text="Already member? Login Here"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:onClick="login"
        android:textStyle="bold"/>
</LinearLayout>